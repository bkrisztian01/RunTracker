<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/salary_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/layout_runitem_bg"
    android:clipToOutline="true"
    android:orientation="horizontal"
    android:padding="15dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_run_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?attr/colorSecondary"
        android:src="@drawable/ic_mon"
        app:shapeAppearanceOverlay="@style/RoundedCornersRunItem" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_run_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="17sp"
            tools:text="Monday run" />

        <TextView
            android:id="@+id/tv_run_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="10/20/22" />

    </LinearLayout>
</LinearLayout>